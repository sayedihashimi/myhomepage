<div class="userlink-container" hidden="@(UserLinkVM.Hidden)">
    <a class="userlink" href="@UserLinkVM.UserLink.Url" target="_blank">
        <div class="@GetImageClassString()">
            @if (string.IsNullOrWhiteSpace(UserLinkVM.UserLink.BackgroundColor))
            {
                <img src="@UserLinkVM.UserLink.ImageUrl"
                     alt="@UserLinkVM.UserLink.ImageUrl" />
            }
            else
            {
                <img src="@UserLinkVM.UserLink.ImageUrl"
                     alt="@UserLinkVM.UserLink.ImageUrl"
                     style="background-color:@(UserLinkVM.UserLink.BackgroundColor)" />
            }
        </div>
        <div class="userlink-text">@UserLinkVM.UserLink.Text</div>
    </a>
</div>
@code {
    [Parameter]
    public UserLinkViewModel UserLinkVM { get; set; }

    string GetImageClassString() {
        var classstr = "userlink-image";
        if (UserLinkVM.UserLink.InvertImageColors) {
            classstr += " invert";
        }
        return classstr;
    }
}
